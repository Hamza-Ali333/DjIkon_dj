<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="25dp"
    android:orientation="vertical"
    android:background="@drawable/white_roundshape"
    app:cardCornerRadius="10dp">


        <ImageView
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_like"/>
        <TextView
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Thank You"/>
        <TextView
            android:id="@+id/info_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:textColor="@color/Graycolor"
            android:text="Your Payment is successfull. All the invoice related details are sent on your provided email address and mobile number."
            />

        <TextView
            android:id="@+id/txt_ok"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="80dp"
            android:paddingRight="80dp"
            android:textStyle="bold"
            android:background="@drawable/blueround_stroke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlue"
            android:text="OK"/>

    </LinearLayout>
